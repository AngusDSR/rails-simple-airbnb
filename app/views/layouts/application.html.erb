<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.2/css/all.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# NAV BAR %>
    <nav class="navbar bg-light">
      <div class="container-fluid">
        <%= link_to flats_path, class: "navbar-brand fw-bold" do %>
          <%= icon('fa-solid', 'bed') %>
           Simple Airbnb
        <% end %>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Find your perfect stay" aria-label="Search">
          <button class="btn btn-outline-success me-2" type="submit">Search</button>
          <%= link_to new_flat_path, class: "btn btn-success me-2" do %>
            <%= icon('fa-solid', 'building') %>
          <% end %>
          <button class="btn btn-warning" type="submit"><i class="fa-solid fa-key"></i></button>
        </form>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
